<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gym Management System</title>
    <link rel="stylesheet" href="/public/css/dashboard.css">
</head>

<body>
    <!-- Navbar Section -->
    <nav class="navbar" id="navbar">
        {{!-- <div id="hamburger" class="hamburger">
            <span style="font-size: 20px; font-weight: 700;">â«¶</span>
        </div> --}}
        <div class="navbar-logo">
            <h1>Gym Management System</h1>
            <h2 class="sponsor">{{gymName}}</h2>
        </div>
        <ul id="navbar-link" class="navbar-links">
            <li><a href="/member" class="link">View</a></li>
            <li><a href="/insert" class="link">Insert</a></li>
            <li><a href="/update" class="link">Update</a></li>
            <li><a href="/remove" class="link">Delete</a></li>
            <li><a href="/attendance" class="link">Check</a></li>
        </ul>
    </nav>

    <div class="container">
        <!-- WhatsApp Reminder Section -->
        <section class="whatsapp-reminder-section">
            <div class="whatsapp-reminder-container">
                <p id="reminderDisplay">Click on the button below</p>
            </div>
            <div class="whatsapp-reminder-container">
                <button id="getWhatsappReminder" class="whatsapp-button">Get Reminder via WhatsApp</button>
                <button id="copy" class="whatsapp-button" style="background-color: rgb(41, 39, 39); margin-left: 10px;"
                    onclick="copyIt()">Copy</button>
            </div>
        </section>

        <!-- Reminder Button Section -->
        <section class="reminder-button-section">
            <form action="/dashboard" id="sendReminderWhatsapp" method="post">
                <button id="sendReminderButton" type="submit" class="action-button">Send Reminder</button>
            </form>
        </section>

        <!-- Statistics Section -->
        <section class="stats-section">
            <div style="padding: 10px;display: flex; justify-content: center;align-items: center;" >
                <button id="backup" class="action-button" >Send BackUp</button>
            </div>
            <div class="stats-container">
                <div class="stats-box">
                    <h3>Total Members</h3>
                    <p id="totalMembers"></p>
                </div>
                <div class="stats-box">
                    <h3>Total Fees Paid</h3>
                    <label for="revenueFilter">Select Duration:</label>
                    <select id="revenueFilter" style="padding: 5px; margin: 5px 0;">
                        <option value="total">Total</option>
                        <option value="1w">Last 1 Week</option>
                        <option value="1m">Last 1 Month</option>
                        <option value="2m">Last 2 Months</option>
                        <option value="6m">Last 6 Months</option>
                        <option value="1y">Last 1 Year</option>
                        <option value="others">Other Years</option>
                    </select>
                    <p id="totalPrice"></p>
                </div>

                <div class="stats-box">
                    <h3>Total Expiries</h3>
                    <p id="totalExpiries"></p>
                </div>
                <div class="stats-box">
                    <h3>Total Fees Pending</h3>
                    <p id="total-Pending"></p>
                </div>
            </div>
        </section>

        <!-- Charts Section -->
        <section class="charts-section">
            <canvas id="myChart" style="width: 100%; max-width: 800px;"></canvas>
            <canvas id="myChart2" style="width: 100%; max-width: 800px;"></canvas>
            <canvas id="myChart3" style="width: 100%; max-width: 800px;"></canvas>
        </section>

        <!-- Membership Entries Section -->
        <section class="membership-entries-section">
            <h2 style="color: rgb(116, 30, 255);" id="entry">Last 5 Membership Entries</h2>
            <label for="entryCount" style="color: #6a0dad; font-size: 16px;">Select number of entries to
                display:</label>
            <input placeholder="Enter Number Of Enteries You Want ?" type="number" id="entryCount">
            <table id="membershipTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>WhatsApp</th>
                        <th>Membership Date</th>
                        <th>Expiry Date</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be dynamically inserted -->
                </tbody>
            </table>
        </section>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="/public/js/dashboard.js"></script>
</body>

</html>